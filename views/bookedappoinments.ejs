      .nv {
    overflow: hidden;
    /* background-color: #333; */
    background-color: #0359a8;
    }
    .nv a {
    float: left;
    display: block;
    color: white;
    text-align: center;
    padding: 14px 20px;
    text-decoration: none;
  }
  .nv a:hover {
    background-color: #ddd;
    color: black;
  }
  @media screen and (max-width: 400px) {
    .nv a {
      float: none;
      width: 100%;
    }
  }
  .nv{
    font-size: 10px;
  }

  .footer {
    padding: 12px;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    background-color:#ddd;
    color:black;
    text-align: center;
  }


      .content-table{
        border-collapse: collapse;
        margin: 25px 0;
        font-size: 25px;
        min-width: 750px;
        border-radius: 5px 5px 0 0;
        overflow: hidden;
        box-shadow: 0 0 2px rgba(0,0,0,15);
        margin-left: auto;
        margin-right: auto;
       }

       .content-table thead tr{
           background-color:#0359a8;
           color: #ffffff;
           text-align: left;
           font-weight: bold;
       }

       .content-table th
       .content-table td{
           padding: 50px 50px;
       }

       .content-table tbody tr{
           border-bottom: 1px solid #dddddd;
       }

       .content-table tbody tr:nth-of-type(even){
           background-color: #f3f3f3;
       }

        .content-table tbody tr:last-of-type{
           border-bottom: 2px solid #0359a8 ;
        }

